<div>
<%= flash[:notice] %>
</div>

<%= render partial: 'users/list', locals: { user: current_user, book: @book } %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user) do %>
                  <%= image_tag book.user.get_profile_image(100,100) %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(book.id) do %>
                <span><%= book.title %></span>
              </td>
              <td>
                <span><%= book.body %></span>
              </td>
                <% end %>
            </tr>
          <% end %>
        </tbody>
       </table>
    </div>
    </div>
  </div>
</div>